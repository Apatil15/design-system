{
  "version": "1.0.0-beta.2",
  "packages": ["packages/*", "website"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "access": "public",
      "allowBranch": "main",
      "conventionalCommits": true,
      "createRelease": "github",
      "signGitCommit": true,
      "signGitTag": true
    },
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "createRelease": "github",
      "signGitCommit": true,
      "signGitTag": true,
      "changelogPreset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "✨ Features"
          },
          {
            "type": "fix",
            "section": "🐛 Bug Fixes"
          },
          {
            "type": "perf",
            "hidden": false,
            "section": "⚡️ Performance"
          },
          {
            "type": "chore",
            "hidden": false,
            "section": "🛠 Maintenance"
          },
          {
            "type": "docs",
            "hidden": false,
            "section": "📝 Documentation"
          },
          {
            "type": "style",
            "hidden": true
          },
          {
            "type": "refactor",
            "hidden": false,
            "section": "♻️ Refactor"
          },
          {
            "type": "test",
            "hidden": true
          },
          {
            "type": "visual",
            "hidden": false,
            "section": "💄 Visual"
          }
        ]
      }
    }
  }
}
