{
  "version": "1.0.0-beta.3",
  "packages": [
    "packages/*",
    "website"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "access": "public",
      "allowBranch": "main",
      "conventionalCommits": true,
      "createRelease": "github",
      "signGitCommit": true,
      "signGitTag": true
    },
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "createRelease": "github",
      "signGitCommit": true,
      "signGitTag": true,
      "changelogPreset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "‚ú® Features"
          },
          {
            "type": "fix",
            "section": "üêõ Bug Fixes"
          },
          {
            "type": "visual",
            "hidden": false,
            "section": "üíÑ Visual"
          },
          {
            "type": "perf",
            "hidden": false,
            "section": "‚ö°Ô∏è Performance"
          },
          {
            "type": "docs",
            "hidden": false,
            "section": "üìù Documentation"
          },
          {
            "type": "chore",
            "hidden": false,
            "section": "üõ† Maintenance"
          },
          {
            "type": "style",
            "hidden": true
          },
          {
            "type": "refactor",
            "hidden": false,
            "section": "‚ôªÔ∏è Refactor"
          },
          {
            "type": "test",
            "hidden": true
          }
        ],
        "issuePrefixes": [
          "#"
        ],
        "issueUrlFormat": "{{host}}/{{owner}}/{{repository}}/issues/{{id}}",
        "commitUrlFormat": "{{host}}/{{owner}}/{{repository}}/commit/{{hash}}",
        "compareUrlFormat": "{{host}}/{{owner}}/{{repository}}/compare/{{previousTag}}...{{currentTag}}",
        "userUrlFormat": "{{host}}/{{user}}"
      }
    }
  }
}
