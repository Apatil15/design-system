{
  "name": "nds",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "gulp build",
    "build:core": "gulp build:core",
    "build:docs": "lerna exec --scope=nds-docs -- npm run build -- --dest ../public",
    "build:react": "gulp build:react",
    "dev": "gulp dev",
    "dev:core": "gulp dev:core",
    "dev:docs": "lerna exec --scope=nds-docs -- npm run dev",
    "dev:react": "gulp dev:react",
    "fix": "concurrently npm:lint:*-fix",
    "lint": "concurrently npm:lint:{es,prettier,style}",
    "lint:es": "eslint '**/*.{js,jsx,ts,tsx}'",
    "lint:es-fix": "npm run lint:es -- --fix",
    "lint:prettier": "npm run prettier -- --check",
    "lint:prettier-fix": "npm run prettier -- --write",
    "lint:style": "stylelint **/*.{css,sass,scss}",
    "lint:style-fix": "npm run lint:style -- --fix",
    "prepublishOnly": "NODE_ENV=production gulp build",
    "prettier": "prettier '**/*.{html,xhtml,md,json,yaml,yml}'",
    "publish": "lerna publish --registry https://npm.wwnorton.com",
    "report": "nyc report --reporter html",
    "storybook": "lerna exec --scope=@nds/react -- npm run storybook",
    "test": "nyc ava"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{css,sass,scss,html}": [
      "stylelint --fix",
      "git add"
    ],
    "*.{html,xhtml,md,json,yaml,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "browserslist": [
    "android >= 30",
    "chrome >= 35",
    "edge >= 14",
    "ie >= 9",
    "firefox >= 52",
    "safari >= 8"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "autoprefixer": "^9.7.3",
    "concurrently": "^5.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-norton": "^3.0.1",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "fibers": "^4.0.2",
    "gulp": "^4.0.2",
    "gulp-header": "^2.0.9",
    "gulp-postcss": "^8.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^3.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "sass": "^1.24.4",
    "stylelint": "^12.0.1",
    "stylelint-config-norton": "^2.4.0",
    "typescript": "^3.7.4"
  },
  "engines": {
    "node": ">=8.9.0",
    "npm": ">=5"
  },
  "ava": {
    "files": [
      "test/*.{js,jsx}",
      "**/test/*.{js,jsx}",
      "**/*{.,_}{test,spec}.{js,jsx}"
    ]
  },
  "maintainers": [
    "Evan Yamanishi <eyamanishi@wwnorton.com>"
  ],
  "nyc": {
    "all": true,
    "exclude": [
      "**/{.,gulpfile,rollup}*.js",
      "**/*.{spec,test}.{js,jsx}",
      "**/{dist,test}"
    ]
  }
}
