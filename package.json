{
  "name": "nds",
  "private": true,
  "author": "Evan Yamanishi <eyamanishi@wwnorton.com>",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "gulp build",
    "build:core": "gulp build:core",
    "build:docs": "lerna exec --scope=nds-docs -- npm run build -- --dest ../public",
    "build:react": "gulp build:react",
    "dev": "gulp dev",
    "dev:core": "gulp dev:core",
    "dev:docs": "lerna exec --scope=nds-docs -- npm run dev",
    "dev:react": "gulp dev:react",
    "fix": "concurrently npm:lint:*-fix",
    "lint": "concurrently npm:lint:{es,prettier,style}",
    "lint:es": "eslint '**/*.{js,jsx,ts,tsx}'",
    "lint:es-fix": "npm run lint:es -- --fix",
    "lint:prettier": "npm run prettier -- --check",
    "lint:prettier-fix": "npm run prettier -- --write",
    "lint:style": "stylelint **/*.{css,sass,scss}",
    "lint:style-fix": "npm run lint:style -- --fix",
    "prepublishOnly": "NODE_ENV=production gulp build",
    "prettier": "prettier '**/*.{html,xhtml,md,json,yaml,yml}'",
    "publish": "lerna publish --registry https://npm.wwnorton.com",
    "report": "nyc report --reporter=html --reporter=text",
    "storybook": "lerna exec --scope=@nds/react -- npm run storybook",
    "test": "ava"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{css,sass,scss,html}": [
      "stylelint --fix"
    ],
    "*.{html,xhtml,md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "browserslist": [
    "android >= 30",
    "chrome >= 35",
    "edge >= 14",
    "ie >= 9",
    "firefox >= 52",
    "safari >= 8"
  ],
  "ava": {
    "extensions": [
      "ts",
      "tsx"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "all": true,
    "exclude": [
      "**/.eslintrc*",
      "**/*.test.{ts,tsx}"
    ],
    "include": [
      "packages/*/src"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "autoprefixer": "^9.7.4",
    "ava": "^3.2.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-norton": "^3.0.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "fibers": "^4.0.2",
    "gulp": "^4.0.2",
    "gulp-header": "^2.0.9",
    "gulp-postcss": "^8.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^4.2.1",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.7",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "sass": "^1.25.0",
    "stylelint": "^13.0.0",
    "stylelint-config-norton": "^3.0.0",
    "ts-node": "^8.6.1",
    "typescript": "^3.7.5"
  },
  "engines": {
    "node": ">=10.13.0",
    "npm": ">=5"
  }
}
