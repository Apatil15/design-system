{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["DOM", "ESNEXT"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "removeComments": false,
    "rootDir": ".",
    "skipLibCheck": false,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "@nds/*": ["packages/*/src"],
      "@nds/core/*": ["packages/core/src/*"],
      "@nds/react/*": ["packages/react/src/*"],
    },
  },
  "references": [
    { "path": "packages/core" },
    { "path": "packages/react" },
  ],
}
